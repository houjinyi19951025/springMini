<!--    </bean>-->

    <bean id="myInterceptor" class="com.mini.test.service.MyInterceptor" />

    <bean id="myBeforeAdvice" class="com.mini.test.service.MyBeforeAdvice" />

    <bean id="advisor" class="com.mini.aop.NameMatchMethodPointcutAdvisor">
        <property type="com.mini.aop.Advice" name="advice" ref="myBeforeAdvice"/>
        <property type="String" name="mappedName" value="do*"/>
    </bean>

    <bean id="autoProxyCreator" class="com.mini.aop.framework.autoproxy.BeanNameAutoProxyCreator" >
        <property type="String" name="pattern" value="action*" />
        <property type="String" name="interceptorName" value="advisor" />
    </bean>



</beans>


