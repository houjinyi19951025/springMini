    <bean id="dataSource" class="com.mini.jdbc.pool.PooledDataSource">
        <property type="String" name="driverClassName" value="com.mysql.jdbc.Driver"/>
        <property type="String" name="url" value="jdbc:mysql://127.0.0.1:3306/test"/>
        <property type="String" name="username" value="root"/>
        <property type="String" name="password" value="root"/>
<!--        <property type="int" name="initialSize" value="3"/>-->
    </bean>

    <bean id="studentService" class="com.mini.test.service.StudentServiceImpl">
    </bean>
    <bean id="jdbcTemplate" class="com.mini.jdbc.core.JdbcTemplate">
        <property type="javax.sql.DataSource" name="dataSource" ref="dataSource"/>
    </bean>

    <bean id="sqlSessionFactory" class="com.mini.batis.DefaultSqlSessionFactory" init-method="init">
        <property type="String" name="mapperLocations" value="resources/mapper"></property>
    </bean>

    <bean id="messageConverter" class="com.mini.http.converter.DefaultHttpMessageConverter">
        <property type="com.mini.util.ObjectMapper" name="objectMapper" ref="objectMapper"/>
    </bean>

    <bean id="webBindingInitializer" class="com.mini.test.web.custom.DateInitializer">
    </bean>

    <bean id="handlerMapping" class="com.mini.web.method.annotation.RequestMappingHandleMapping"/>

    <bean id="objectMapper" class="com.mini.util.DefaultObjectMapper" >
        <property type="String" name="dateFormat" value="yyyy/MM/dd"/>
        <property type="String" name="decimalFormat" value="###.##"/>
    </bean>>

    <bean id="handlerAdapter" class="com.mini.web.method.annotation.RequestMappingHandlerAdapter">
        <property type="com.mini.http.converter.HttpMessageConverter" name="messageConverter" ref="messageConverter"/>
        <property type="com.mini.web.bind.support.WebBindingInitializer" name="webBindingInitializer" ref="webBindingInitializer"/>
    </bean>

    <bean id="viewResolver" class="com.mini.web.servlet.view.InternalResourceViewResolver" >
        <property type="String" name="viewClassName" value="com.mini.web.servlet.view.JstlView" />
        <property type="String" name="prefix" value="/jsp/" />
        <property type="String" name="suffix" value=".jsp" />
    </bean>

    <bean id="action" class="com.mini.test.service.Action" />

<!--    <bean id="action" class="com.mini.aop.ProxyFactoryBean" >-->
<!--        <property type="java.lang.Object" name="target" ref="realaction"/>-->
